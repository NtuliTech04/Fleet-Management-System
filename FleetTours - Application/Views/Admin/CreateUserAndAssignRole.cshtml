
@{
    ViewBag.Title = "CreateUserAndAssignRole";
}

<div class="jumbotron">
    <div class="container">
        <h2>Users And Roles</h2>
        <br />
        @using (Html.BeginForm("CreateUserAndAssignRole", "Admin", FormMethod.Post))
        {
            <div class="form-horizontal">

                <div class="form-group">
                    <label class="col-md-2 control-label">First Name:</label>
                    <div class="col-md-10">
                        <input type="text" class="form-control" name="txtName" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-2 control-label">Last Name:</label>
                    <div class="col-md-10">
                        <input type="text" class="form-control" name="txtSurname" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-2 control-label">Email:</label>
                    <div class="col-md-10">
                        <input type="text" class="form-control" name="txtEmail" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-2 control-label">Password:</label>
                    <div class="col-md-10">
                        <input type="password" class="form-control" name="txtPassword" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-2 control-label">Assign Role:</label>
                    <div class="col-md-10">
                        @Html.DropDownList("RoleName", (IEnumerable<SelectListItem>)ViewBag.Roles, "Select...", new { @class = "form-control" })
                    </div>
                </div>
                <br />
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Add User" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        }

    </div>
</div>

