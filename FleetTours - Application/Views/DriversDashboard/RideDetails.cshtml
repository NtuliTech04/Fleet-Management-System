@model FleetTours___Application.Models.Ride

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 class="modal-title">Ride Request Details</h3>
</div>


<div class="modal-body">

    <div class="form-horizontal">

        <div class="form-group">
            <label class="control-label col-sm-3">Name:</label>
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.UserProfile.FirstName, new { @class = "form-control required", @disabled = "disabled" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-3">Surname:</label>
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.UserProfile.LastName, new { @class = "form-control required", @disabled = "disabled" })
            </div>
        </div>

        @if (Model.RideStatus != "Completed")
        {
            <div class="form-group">
                <label class="control-label col-sm-3">Phone:</label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.UserProfile.Phone, new { @class = "form-control required", @disabled = "disabled" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-3">Email:</label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control required", @disabled = "disabled" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-3">Pick-Up:</label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.RideAddress.PickUp, new { @class = "form-control required", @disabled = "disabled" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-3">Destination:</label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.RideAddress.Destination, new { @class = "form-control required", @disabled = "disabled" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-3">Travel&nbsp;Distance:</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" value="@Model.Distance km" readonly="readonly" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-3">Basic&nbsp;Cost:</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" value="@Model.BasicCost.ToString("C")" readonly="readonly" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-3">Discount:</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" value="@Model.Discounts.ToString("C")" readonly="readonly" />
                </div>
            </div>
        }


        <div class="form-group">
            <label class="control-label col-sm-3">Total Cost:</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" value="@Model.TotalCost.ToString("C")" readonly="readonly" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-3">Payment Method:</label>
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.PaymentMethod, new { @class = "form-control required", @disabled = "disabled" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-3">Payment status:</label>
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.PaymentStatus, new { @class = "form-control required", @disabled = "disabled" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-3">Ride Status:</label>
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.RideStatus, new { @class = "form-control required", @disabled = "disabled" })
            </div>
        </div>

    </div>
</div>

<div class="modal-footer">
    <button class="btn btn-warning" data-dismiss="modal">Close</button>
</div>
