@model IEnumerable<FleetTours___Application.Models.AssignDriver>

@{
    ViewBag.Title = "Index";
}

<style>
    table, th, td {
        text-align: center;
        border-collapse: collapse;
        padding: 7px;
    }

        table tr:nth-child(odd) {
            /*background-color: #ffffff;*/
            background-color: #f1f1f1;
        }

        table tr:nth-child(even) {
            background-color: #ffffff;
        }
</style>
<div class="jumbotron">
    <div class="container" style="margin-top:4vh;">
        <h2 class="text-center"><u>Assigned Trips</u></h2>
        <br />
        <table class="table table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Booking.BkID)
                </th>
                <th>
                    <label>Trip To?</label>
                </th>
                <th>
                    <label>Pick-Up Date</label>
                </th>
                <th>
                    <label>Pick-Up Time</label>
                </th>
                <th>
                    <label>Pick-Up</label>
                </th>
                <th>
                    <label>Process Status</label>
                </th>

                <th style="padding-left:30px"><b>Action</b></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Booking.BkID)
                    </td>

                    <td>
                        @Html.DisplayFor(model => item.Booking.BookDetails.Vacation)
                    </td>
                    <td>
                        @item.Booking.BookDetails.VacationDate.ToString("dd MMM yyyy")
                    </td>

                    <td>
                        @Html.DisplayFor(model => item.Booking.BookDetails.LessonTime)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.Booking.Confirmation)
                    </td>
                     <td>
                        @Html.DisplayFor(model => item.Booking.Status)
                    </td>
                    <td>
                        @Html.ActionLink("View Details", "Details", "Bookings", new { id = item.BkID }, new { @class = "btn btn-primary" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>